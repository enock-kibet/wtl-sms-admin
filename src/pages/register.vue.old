                  placeholder="Select your title"
                  :error-messages="errors.title"
                />
              </VCol>

              <!-- First Name -->
              <VCol
                cols="6"
                class="pb-1"
              >
                <AppTextField
                  v-model="form.first_name"
                  :rules="[requiredValidator]"
                  label="First Name"
                  :error-messages="errors.first_name"
                />
              </VCol>

              <!-- Last Name -->
              <VCol
                cols="6"
                class="pb-1"
              >
                <AppTextField
                  v-model="form.last_name"
                  :rules="[requiredValidator]"
                  label="Last Name"
                  :error-messages="errors.last_name"
                />
              </VCol>

              <!-- PF Number -->
              <VCol
                cols="12"
                class="pb-1"
              >
                <AppTextField
                  v-model="form.pf_number"
                  :rules="[requiredValidator]"
                  label="PF Number"
                  :error-messages="errors.pf_number"
                />
              </VCol>

              <!-- email -->
              <VCol
                cols="12"
